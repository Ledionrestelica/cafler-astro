---
import Stars from "./Stars";
import truck from "../assets/icons/truck.svg"
const {title, description, price, slug, image, id} = Astro.props;

---

<div class="border border-[#DADADA] md:max-h-[380px] w-full flex flex-col md:flex-row bg-[#FCFCFC]">
    <div class="flex-1 py-[15px] px-[12px] md:py-[44px] md:px-[31px] flex flex-col gap-[10px]">
        <p class="uppercase extrabold text-[16px]">{title} - all models</p>
        <h1 class="uppercase black text-[26px]">cafler pro supreme car cover</h1>
        <p class="regular text-[16px] text-[#3C4043]">{description}</p>
        <Stars star={5}></Stars>
        <p class="black text-[26px]">${price}</p>
        <div class="flex gap-2">
            <button class="extrabold text-lg text-white px-[20px] py-2 bg-[var(--color-blue-500)]">ADD TO CART</button>
        </div>
    </div>
    <div class="flex items-center justify-center bg-white">
        <img src={image} class="max-h-[100%]">
    </div>
</div>